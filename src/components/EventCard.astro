---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  src: ImageMetadata;
  alt: string;
}

const { title, src, alt } = Astro.props;
---

<div class="box mx-auto">
  <Image
    title={title}
    src={src}
    alt={alt}
    class="imageCard aspect-square min-w-[300px] rounded-xl md:w-full"
  />
  <p class="textBox font-poppins">{title}</p>
</div>

<style>
  .imageCard {
    box-shadow: 0px 2px 5px;
    border: 1px solid white;
  }
  .box {
    display: inline-block;
    position: relative;
    padding-bottom: 30px;
    margin-inline: 5px;
    scroll-snap-align: center;
    scroll-snap-stop: always;
  }
  .textBox {
    display: inline;
    text-align: center;
    padding: 5px;
    padding-inline: 10px;
    border-radius: 10px;
    min-width: max-content;
    background-color: white;
    position: absolute;
    top: 85%;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0px 3px 5px;
  }
</style>
