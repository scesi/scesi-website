---
import { Image } from 'astro:assets';

interface Props {
  image: ImageMetadata;
  description: string;
}

const { image, description } = Astro.props;
---

<div class="box mx-auto">
  <Image
    src={image}
    alt={description}
    class="aspect-square min-w-[300px] rounded-xl md:w-full"
  />
  <p class="textBox">Hola</p>
</div>

<style>
  .box {
    display: inline-block;
    position: relative;
    padding-bottom: 30px;
    margin-inline: 5px;
    scroll-snap-align: center;
    scroll-snap-stop: always;
  }
  .textBox {
    display: inline;
    text-align: center;
    padding: 5px;
    padding-inline: 10px;
    border-radius: 10%;
    background-color: white;
    position: absolute;
    top: 85%;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0px 3px 10px;
  }
</style>
