---
import { Image } from 'astro:assets';
import image1 from '../assets/images/image-gallery-1.png';
import image2 from '../assets/images/image-gallery-2.png';
import image3 from '../assets/images/image-gallery-3.png';
import image4 from '../assets/images/image-gallery-4.png';
import image5 from '../assets/images/image-gallery-5.png';
import image6 from '../assets/images/image-gallery-6.png';
import image7 from '../assets/images/image-gallery-7.png';
import image8 from '../assets/images/image-gallery-8.png';
import image9 from '../assets/images/image-gallery-9.png';
---

<main class="container mx-auto lg:px-28">
  <h4 class="font-poppins text-2xl text-center font-semibold">Galería de imágenes</h4>
  <div class="flex flex-col gap-3 py-3">
    <!-- Primera fila de imágenes -->
    <div class="flex flex-col gap-3 sm:flex-row sm:gap-2">
      <div class="w-full sm:w-1/2">
        <Image
          src={image1}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Cuatro miembros de la SCESI sonriendo"
        />
      </div>
      <div class="w-full sm:w-1/4">
        <Image
          src={image2}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Mesa directiva 2023"
        />
      </div>
      <div class="w-full sm:w-1/4">
        <Image
          src={image3}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Miembros de la SCESI en un evento del día de la mujer"
        />
      </div>
    </div>

    <!-- Segunda fila de imágenes -->
    <div class="flex flex-col gap-3 sm:flex-row sm:gap-2">
      <div class="w-full sm:w-1/4">
        <Image
          src={image4}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Taller SCESI"
        />
      </div>
      <div class="w-full sm:w-1/2">
        <Image
          src={image5}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Equipo organizador Flisol 2023"
        />
      </div>
      <div class="w-full sm:w-1/4">
        <Image
          src={image6}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Miembros de la SCESI en voluntariado"
        />
      </div>
    </div>

    <!-- Tercera fila de imágenes -->
    <div class="flex flex-col gap-3 sm:flex-row sm:gap-2">
      <div class="w-full sm:w-1/4">
        <Image
          src={image7}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Imagen Flisol 2023"
        />
      </div>
      <div class="w-full sm:w-1/4">
        <Image
          src={image8}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Cuatro miembros de la SCESI"
        />
      </div>
      <div class="w-full sm:w-1/2">
        <Image
          src={image9}
          class="w-full rounded-lg object-cover md:h-72"
          alt="Taller de la SCESI"
        />
      </div>
    </div>
  </div>
</main>
