<style>
  .navegation {
    position: relative;
    text-decoration: none;
    color: rgb(140, 140, 140);
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.5px;
    padding: 0 5px;
  }
  .navegation::after {
    content: '';
    position: absolute;
    background-color: white;
    height: 3px;
    width: 0;
    left: 0;
    bottom: -15px;
    transition: 0.3s;
  }
  .navegation:hover {
    color: white;
  }
  .navegation:hover::after {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .navegation {
      font-size: 16px;
      padding: 0 5px;
    }
  }

  @media (max-width: 500px) {
    .navegation {
      font-size: 16px;
      padding: 0 1px;
      letter-spacing: 0px;
    }
  }
</style>
