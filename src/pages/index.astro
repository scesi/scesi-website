---
import JoinAs from '../components/JoinAs.astro';
import Layout from '../layouts/Layout.astro';
import AboutUs from '../components/AboutUs.astro';
import image1 from '../assets/img/imagen1.png';
import image2 from '../assets/img/imagen2.png';
import image3 from '../assets/img/imagen3.png';
---

<Layout title="Welcome to Astro.">
  <!-- About Us -->
  <div class="bg-[#F8F8F8]">
    <div
      class="container mx-auto px-4 py-2 font-poppins md:px-8 md:py-12 lg:px-20"
    >
      <p class="text-center text-[32px] font-semibold">Acerca de Nosotros</p>
      <p class="pb-5 text-center text-sm md:pb-10">
        La Sociedad Científica De Estudiantes de Sistemas e Informática
        (S.C.E.S.I.) fue fundada un 20 de octubre del 2003. Con los objetivos
        de:
      </p>
      <AboutUs
        imagen={image1}
        alt="Eventos de carácter científico a nivel local"
        content="Organizar y coordinar la asistencia de estudiantes de nuestra Facultad y Sociedad a eventos de carácter científico a nivel local, nacional e internacional."
        isPictureRight={true}
      />
      <AboutUs
        imagen={image2}
        alt="Organización de SCESI de eventos científicos"
        content="Organizar y ser partícipes de los eventos científicos locales, nacionales o internacionales en el ámbito estudiantil que tengan por  interés las Carreras de Sistemas e Informática UMSS."
        isPictureRight={false}
      />
      <AboutUs
        imagen={image3}
        alt="Participación en gestiones SCESI"
        content="Gestionar el patrocinio para proyectos o eventos de investigación cuyos autores principales sean integrantes de la SCESI."
        isPictureRight={true}
      />
    </div>
  </div>
  <!-- <JoinAs /> -->
</Layout>
